<html>
<head>
    <title>React App Demo</title>

    <script src="https://unpkg.com/react@17/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@17/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
</head>

<body>

<h2>Home</h2>
<hr>
<h3>Movies</h3>

<div id="root"></div>
<script type="text/babel">
  
  const items = <%- items %>;

  const App = () => {

    // fetch your movies -> useEffect()

    // handle functions (CRUD) Create, update delete
    const [movies, setMovies] = React.useState(items);
    const [selectedItem, setSelectedItem] = React.useState(items);

    const clearEdit = () => {
      setSelectedItem([]);
    }

    const itemClick = (event) => {
      const movie = items.find((movie) => movie.title == event.target.innerText);
      setSelectedItem(movie);
      console.log(movie)
    }
    
    return (
      <>
        <div>
          <ItemsList items = {movies} selectedItem = {selectedItem} setSelected = {itemClick} />
          <DetailForm clear = {clearEdit} selectedItem = {selectedItem} />
        </div>
      </>
    );
  }

    const ItemsList = (props) => {
      const {items, selectedItem} = props;
      const listItems = items.map((item) =>
        <li key={item._id} onClick={props.setSelected}>
          {item.title}
        </li>
      );
      return (
        <ul>{listItems}</ul>
      );
    }

    const DetailForm = (props) => { 
      const {clear, selectedItem} = props;
          return (
              <>
                <h3>Details:</h3>
                {
                  <form id = "myForm">
                    <input type="text" name="title" placeholder="title" value={props.selectedItem.title || ''} onChange={props.changeHandler} /><p/>
                    <input type="text" name="director" placeholder="director" value={props.selectedItem.director || ''} onChange={props.changeHandler} /><p/>
                    <input type="text" name="year" placeholder="year" value={props.selectedItem.year || ''} onChange={props.changeHandler} /><p/>
                    <input type="text" name="genre" placeholder="genre" value={props.selectedItem.genre || ''} onChange={props.changeHandler} /><p/>
                    <input type="text" name="opinion" placeholder="opinion" value={props.selectedItem.opinion || ''} onChange={props.changeHandler} /><p/>
                  </form>
                }
                <button type="button" onClick={clear}>Clear</button>
              </>
            );
          }
    
    // form to handle field changes
    // https://www.freecodecamp.org/news/how-to-build-forms-in-react/
    
    ReactDOM.render(<App />, document.getElementById('root'));
</script>
</body>
</html>